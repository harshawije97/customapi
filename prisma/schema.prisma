generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(cuid())
  fullName    String
  email       String   @unique
  role        Role
  dateOfBirth DateTime?
  age         Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  INTERN
  ENGINEER
  ADMIN
}
